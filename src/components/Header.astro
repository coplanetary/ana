---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="social-links">
      <HeaderLink href="/">c@ ana</HeaderLink>
      <HeaderLink href="/about">egor</HeaderLink>
      <HeaderLink href="/tuoba">rogr</HeaderLink>
      <HeaderLink href="/aevum">void</HeaderLink>
      <HeaderLink href="/blog">c@ qb</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    margin-left: 1.9rem;
    margin-right: 1.9rem;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
    margin-left: auto;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
